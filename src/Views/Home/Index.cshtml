    <div class="row">
        <div class="col-7">
            <div id="div_plot_area"></div>
        </div>
        <div class="col">
            <div class="row">
                <h4>Three Dimensional Distance Calculator</h4>
            </div>
            <div class="row">
                <p>Please select two points from chart to calculate distance.</p>
            </div>
            <div class="row">

                <div class="form-group form-row">
                    <label for="point_a" class="col-sm-4 col-form-label">Point A: </label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" id="point_a_id" value="">
                    </div>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="point_a" placeholder="(X1, Y1, Z1)" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="point_b" class="col-sm-4 col-form-label">Point B:</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" id="point_b_id" value="">
                    </div>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="point_b" placeholder="(X2, Y2, Z2)" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="distance" class="col-sm-3 col-form-label">Distance(M):</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="distance" placeholder="" value="">
                    </div>
                </div>
                <div class="col-sm-4">
                    <button type="button" id="clear" class="btn btn-light">Clear</button>
                </div>
                <div class="col-sm-8">
                    <button type="button" id="calculate" class="btn btn-primary">Calculate</button>
                </div>
            </div>

        </div>
    </div>

